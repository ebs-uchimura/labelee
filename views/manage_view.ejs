        <td><%= data.item[i].madein %></td>
        <td><%= data.item[i].volume %></td>
        <td><%= data.item[i].alchohol %></td>
        <td><%= data.item[i].specific %></td>
    </tr>
    <% } %>
</table>
</div>
<div class="content" id="4">
<h2>agent</h2>
<table class="tbl">
    <tr>
        <td width="5%">AG_ID</td>
        <td width="5%">sort</td>
        <td width="20%">company name</td>
        <td width="5%">zip</td>
        <td width="20%">address</td>
        <td width="14%">tel</td>
        <td width="17%">mail</td>
        <td width="7%">AG</td>
        <td width="7%">staff</td>
    </tr>
    <% for(var i=0;i<data.agent.length;i++){ %>
