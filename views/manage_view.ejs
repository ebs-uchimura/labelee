</ul>
</div>
<div class="content" id="1">
<h2>order</h2>
<table class="tbl">
    <tr>
        <td width="3%">ID</td>
        <td width="9%">order ID</td>
        <td width="9%">order date</td>
        <td width="18%">product</td>
        <td width="5%">unit price<br />(yen,tax included)</td>
        <td width="3%">amount</td>
        <td width="5%">subtotal<br />(yen,tax included)</td>
        <td width="6%">total price<br />(yen,tax included)</td>
        <td width="10%">deadline</td>
        <td width="3%">label</td>
        <td width="7%">management no</td>
        <td width="10%">customer</td>
        <td width="3%">AG</td>
        <td width="3%">payment</td>
        <td width="3%">progress</td>
        <td width="6%">staff</td>
    </tr>
  <% for(var i=0;i<data.order.length;i++){ %>
    <tr>
        <td><%= data.order[i].id %></td>
        <td><%= data.order[i].order_id %></td>
        <td><%= data.times[i] %></td>
        <td><%= data.order[i].itemname %></td>
        <td><%= data.order[i].price.toLocaleString() %></td>
        <td><%= data.order[i].itemcount %></td>
        <td><%= (data.order[i].price * data.order[i].itemcount).toLocaleString() %></td>
        <td><%= data.order[i].total.toLocaleString() %></td>
        <td><%= data.order[i].date %></td>
        <td><a href="<%= data.order[i].url %>" onclick="window.open('<%= data.order[i].url %>'); return false;"><%= data.order[i].labelid %></a></td>
        <td><%= data.order[i].man_id %></td>
        <td><%= data.order[i].username %></td>
        <td><%= data.order[i].agentid %></td>
        <td><% if(data.order[i].paid == 1){ %>done<% } else { %>not done<% } %></td>
        <td><%= data.order[i].progress %></td>
        <td><%= data.order[i].ownerid %></td>
    </tr>
  <% } %>
</table>
</div>
<div class="content" id="2">
<h2>user</h2>
<table class="tbl">
    <tr>
        <td width="5%">user ID</td>
        <td width="12%">name</td>
        <td width="12%">ruby</td>
        <td width="12%">organization</td>
        <td width="7%">zip</td>
        <td width="16%">address</td>
        <td width="10%">tel</td>
        <td width="14%">mail</td>
        <td width="5%">staff ID</td>
        <td width="5%">employee ID</td>
    </tr>
    <% for(var i=0;i<data.user.length;i++){ %>
    <tr>
        <td><%= data.user[i].id %></td>
        <td><%= data.user[i].name %></td>
        <td><%= data.user[i].ruby %></td>
        <td><%= data.user[i].group %></td>
        <td><%= data.user[i].zip %></td>
        <td><%= data.user[i].address %></td>
        <td><%= data.user[i].tel %></td>
        <td><%= data.user[i].mail %></td>
